{
  "name": "todo-counter",
  "version": "1.0.0",
  "description": "Count todo comments in given directory with filter ext",
  "main": "src/index.js",
  "scripts": {
    "format": "prettier --write 'src/*.js' 'test/*.js'",
    "format:check": "prettier --check --cache '**/*.js'",
    "lint": "standard --fix src/*.js test/*.js",
    "test": "ava test",
    "demo-todo": "node ./bin/todo-counter.js 'demo' '.js'",
    "demo-skipped-tests": "node ./bin/skipped-test-counter.js 'demo' '.js'",
    "semantic-release": "semantic-release",
    "commit": "commit-wizard"
  },
  "bin": {
    "todo-counter": "bin/todo-counter.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jjhelguero/todo-counter"
  },
  "keywords": [
    "todo",
    "counter"
  ],
  "author": "Joshua Helguero <jjhelguero@protonmail.com>",
  "bugs": {
    "url": "https://github.com/jjhelguero/todo-counter/issues"
  },
  "homepage": "https://github.com/jjhelguero/todo-counter",
  "ava": {
    "files": [
      "test/*-test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "check-more-types": "^2.24.0",
    "dayjs": "^1.11.0",
    "debug": "^4.3.3",
    "lazy-ass": "^2.0.3",
    "lint-staged": "^12.3.5",
    "mock-fs": "^5.1.2",
    "simple-bin-help": "^1.6.0"
  },
  "devDependencies": {
    "ava": "^4.1.0",
    "pre-git": "^3.17.1",
    "prettier": "^2.8.3",
    "semantic-release": "^19.0.2",
    "standard": "^16.0.4"
  },
  "config": {
    "pre-git": {
      "commit-msg": [
        "simple"
      ],
      "pre-commit": [
        "npm run test"
      ],
      "pre-push": [],
      "post-commit": [],
      "post-merge": [],
      "allow-untracked-files": true
    }
  }
}
